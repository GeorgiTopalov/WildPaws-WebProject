@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="Learning Web" />
    <meta name="keywords" content="wild, paws, dog, food" />
    <meta name="author" content="Georgi Topalov" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/site.css">
    <!-- Google Font: Source Sans Pro -->
     <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&family=Poppins&display=swap"
      rel="stylesheet"
    />
    <partial name="_ValidationScriptsPartial" />

</head>

<body>
    <main>
     <section id="login">
          <div class="card card-color-white">
            <div class="login-box-body">
              <h4>Sign up here</h4>
              <hr />
              <form id="account" method="post">
                <div
                  asp-validation-summary="ModelOnly"
                  class="validation-text"
                ></div>
                <div class="input-group">
                  <div class="input-row">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      height="1.5em"
                      viewBox="0 0 512 512"
                    >
                      <path
                        d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"
                      />
                    </svg>
                    <input
                      asp-for="Input.Email"
                      autocomplete="username"
                      placeholder="Username"
                      aria-required="true"
                    />
                  </div>
                  <span
                    asp-validation-for="Input.Email"
                    class="validation-text"
                  ></span>
                </div>
                <div class="input-group">
                  <div class="input-row">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      height="1.5em"
                      viewBox="0 0 448 512"
                    >
                      <path
                        d="M224 64c-44.2 0-80 35.8-80 80v48H384c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80V144C80 64.5 144.5 0 224 0c57.5 0 107 33.7 130.1 82.3c7.6 16 .8 35.1-15.2 42.6s-35.1 .8-42.6-15.2C283.4 82.6 255.9 64 224 64zm32 320c17.7 0 32-14.3 32-32s-14.3-32-32-32H192c-17.7 0-32 14.3-32 32s14.3 32 32 32h64z"
                      />
                    </svg>
                    <input
                      asp-for="Input.Password"
                      autocomplete="new-password"
                      placeholder="Password"
                      aria-required="true"
                    />
                  </div>
                  <span
                    asp-validation-for="Input.Password"
                    class="validation-text"
                  ></span>
                  <div class="input-group">
                    <div class="input-row">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        height="1.5em"
                        viewBox="0 0 448 512"
                      >
                        <path
                          d="M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z"
                        />
                      </svg>
                      <input
                        asp-for="Input.ConfirmPassword"
                        autocomplete="new-password"
                        placeholder="Confirm Password"
                        aria-required="true"
                      />
                    </div>
                    <span
                      asp-validation-for="Input.ConfirmPassword"
                      class="validation-text"
                    ></span>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      id="agreeTerms"
                      name="terms"
                      value="agree"
                    />
                    <label for="agreeTerms">
                      I agree to the <a href="#">Terms Agreement</a>
                    </label>
                  </div>
                  <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
              </form>
              <section id="alternative-login">
                <p>- Or Sign Up With-</p>
                <hr />
                <form
                  id="external-account"
                  asp-page="./ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl"
                  method="post"
                >
                  <div>
                    <p>
                     @*  @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-blue btn-block" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-facebook mr-2"></i>@provider.DisplayName</button>
                            } *@
                      <button
                        type="submit"
                        class="btn btn-fb"
                        name="provider"
                        value="Facebook"
                        title="Sign up using your Facebook account"
                      >
                        Facebook
                      </button>
                    </p>
                  </div>
                </form>
                <a href="./Login">I already have a membership</a>
              </section>
            </div>
          </div>
        </section>
      </main>
</body>
</html>



