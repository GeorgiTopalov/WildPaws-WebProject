@using WildPaws.Core.Models
@model UserRolesViewModel
@{
    ViewData["Title"] = "Select Role";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}
<div class="row">
    <div class="col-sm-6">
        <form id="edit" method="post">
            <input type="hidden" name="Id" value="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h3>@Html.DisplayFor(m=>m.Name)</h3>
            </div>
            <div class="form-floating">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>User Roles</label>
                        <div asp-for="RoleNames" class="select2bs4" multiple="multiple" data-placeholder="Select roles"
                             style="width: 100%;">
                                <div class="form-check">
                            @foreach (var item in items)
                            {
                                    <input value="@item.Value" selected="@(item.Selected ? "selected" : "")" class="form-check-input" type="checkbox">
                                    <label class="form-check-label">@item.Text</label>
                            }
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <!-- /.col -->
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>



