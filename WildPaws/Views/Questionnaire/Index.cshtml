@using WildPaws.Core.Models
@model QuestionnaireViewModel
@{
    ViewData["Title"] = "Questionnaire";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta name="description" content="Learning Web" />
    <meta name="keywords" content="wild, paws, dog, food" />
    <meta name="author" content="Georgi Topalov" />

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
     <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&family=Poppins&display=swap"
      rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/css2?family=Style+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./style.css" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/flaticon/font/flaticon.css" rel="stylesheet">


    <!-- Template Stylesheet -->
    <link href="~/css/site.css" rel="stylesheet">
    <partial name="_ValidationScriptsPartial" />
</head>

<body>

    <!-- Form Start -->
 <section id="questionnaire">
      <form id="questionnaireForm" class="questionnairewrap" asp-action="SubmitForm" method="post">
        <ul asp-validation-summary="ModelOnly" class="text-danger">
          <li class="name">
            <label asp-for="Name"><h2>Tell us more about </h2></label>
            <input asp-for="Name" type="text" placeholder="Your dog's name">
            <span asp-validation-for="Name"></span>
          </li>
          <li>
            <label asp-for="Breed"><h4>Their breed is </h4></label>
            <input asp-for="Breed" type="text">
            <span asp-validation-for="Breed"></span>
          </li>
          <li>
            <label asp-for="Gender"><h4>Are they a boy or a girl?</h4></label>
            <select asp-for="Gender">
            <span asp-validation-for="Gender"></span>
            <option selected="selected">Boy</option>
            <option>Girl</option>
          </select>
          </li>
          <li>
            <label asp-for="Age"><h4>How old is he/she?</h4></label>
            <select asp-for="Age">
            <span/>
            <option selected="selected">1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>11</option>
            <option>12</option>
            <option>13</option>
            <option>14</option>
            <option>15</option>
            <option>16</option>
            <option>17</option>
            <option>18</option>
            <option>19</option>
            <option>20</option>
            </select>
          </li>
          <li>
            <label asp-for="Weight"><h4>How much does she/he weight?</h4></label>
            <input asp-for="Weight" type="text">
            <span asp-validation-for="Weight"></span>
          </li>
          <li>
            <label for="IsSpayed"><h4>She/he is  </h4></label>
            <select asp-for="IsSpayed">
              <span asp-validation-for="IsSpayed" class="text-danger"></span>
              <option selected="selected" value="false">Not Spayed/Neutered </option>
              <option value="true">Spayed/Neutered</option>
          </select>
          </li>
          <li>
            <label asp-for="BodyStatus"><h4>He/She is</h4></label>
            <select asp-for="BodyStatus">
                <span asp-validation-for="BodyStatus"></span>
                <option>Underweight</option>
                <option>Just perfect the way he/she is</option>
                <option>Overweight</option>
                <option>Obese</option>
            </select>
          </li>
          <li>
            <label asp-for="ActivityLevel"><h4>How active is he/she?</h4></label>
            <select asp-for="ActivityLevel">
                <span asp-validation-for="ActivityLevel"></span>
                <option>Not very active (Primarily stays at home)</option>
                <option>Active (Often taken for walkies and regular play time)</option>
                <option>Very active (Lives outdoors and runs all day)</option>
            </select>
          </li>
          <li>
            <label asp-for="CurrentFoodType"><h4>What food is your dog currently eating?</h4></label>
              <select asp-for="CurrentFoodType">
                  <span asp-validation-for="CurrentFoodType"></span>
                  <option>Dry food (Kibble or freezedried)</option>
                  <option>Wet food</option>
                  <option>Raw food</option>
                  <option>Cooked food</option>
              </select>
          </li>
          <li>
            <label asp-for="TreatsAndScraps"><h4>Do you give your them treats or scraps?</h4></label>
              <select asp-for="TreatsAndScraps">
                  <span asp-validation-for="TreatsAndScraps"></span>
                  <option>Rarely</option>
                  <option>Some treats and/or scraps</option>
                  <option>A lot of treats and/or scraps</option>
              </select>
          </li>
          <li>
            <label asp-for="HasHealthIssues"><h4>Does your dog have any health issues?</h4></label>
              <select asp-for="HasHealthIssues">
                  <span asp-validation-for="HasHealthIssues"></span>
                  <option value="false">No</option>
                  <option value="true">Yes</option>
              </select>
          </li>
          <li>
            <label asp-for="Comment"><h4>Would you like to add anything that we should know?</h4></label>
              <div>
                  <textarea asp-for="Comment" type="text" class="comment"></textarea>
              </div>
          </li>
        </ul>
        <button class="btn btn-primary" type="submit">Continue</button>
      </form>
    </section>

    <a href="#" class="btn btn-primary py-3 fs-4 back-to-top"><i class="bi bi-arrow-up"></i></a>
    <!--JavaScript-->
</body>

</html>
